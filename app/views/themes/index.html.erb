<h1>Listing themes</h1>

<table>
  <tr>
    <th>Theme</th>
    <th>Bg color</th>
    <th>Main text color</th>
    <th>Normal text color</th>
    <th>Button color</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @themes.each do |theme| %>
  <tr>
    <td><%= theme.bg_color %></td>
    <td><%= theme.main_text_color %></td>
    <td><%= theme.normal_text_color %></td>
    <td><%= theme.button_color %></td>
    <td><%= link_to 'Show', theme %></td>
    <td><%= link_to 'Edit', edit_theme_path(theme) %></td>
    <td><%= link_to 'Destroy', theme, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

